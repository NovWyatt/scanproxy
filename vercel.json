{
    "version": 2,
    "public": true,
    "builds": [
      {
        "src": "app.py",
        "use": "@vercel/python"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "app.py"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/$",
        "dest": "/frontend/build/index.html"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/build/$1"
      }
    ],
    "env": {
      "PYTHONUNBUFFERED": "1"
    }
  }